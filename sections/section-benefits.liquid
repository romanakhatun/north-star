{{ 'section-benefits.css' | asset_url | stylesheet_tag }}

<div class="container">
  <div class="benefit ">
    {%- for block in section.blocks -%}
      {%- if block.type == 'benefit' -%}
        <div class="benefit__content">
          <h4>{{ block.settings.title }}</h4>
          {{ block.settings.desc }}
        </div>
      {%- endif -%}
    {%- endfor -%}
  </div>
</div>

{% schema %}
{
  "name": "Benefits",
  "tag": "section",
  "class": "section",
  "settings": [],
  "blocks": [
    {
      "name": "benefit",
      "type": "benefit",
      "limit": 4,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Free Shipping"
        },
        {
          "type": "richtext",
          "id": "desc",
          "label": "Description",
          "default": "<p>Enjoy free shipping on all orders above $100</p>"
        },
        {
          "type": "range",
          "id": "padding_top",
          "min": 0,
          "max": 100,
          "step": 4,
          "unit": "px",
          "label": "t:sections.all.padding.padding_top",
          "default": 36
        },
        {
          "type": "range",
          "id": "padding_bottom",
          "min": 0,
          "max": 100,
          "step": 4,
          "unit": "px",
          "label": "t:sections.all.padding.padding_bottom",
          "default": 36
        }
      ]
    }
  ],

  "presets": [
    {
      "name": "Benefits",
      "settings": {},
      "blocks": [{ "type": "benefit" }]
    }
  ]
}
{% endschema %}
