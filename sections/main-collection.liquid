<h1>{{ section.settings.heading }}</h1>
<p>{{ section.settings.sub_title }}</p>

{%- for collection in section.settings.collection.products limit: section.settings.products_to_show -%}
  {{ collection.featured_image | img_url: 'medium' | img_tag }}
  <br>
  <a href="{{ collection.url }}">{{ collection.title }}</a>
  <br>
  <span>{{ collection.price | money }}</span>
{%- endfor -%}

{% schema %}
{
  "name": "collection",
  "tag": "section",
  "class": "main_collection",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Discover NEW Arrivals"
    },
    {
      "type": "inline_richtext",
      "id": "sub_title",
      "label": "Sub Title",
      "default": "Recently added shirts!"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Select Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 8,
      "step": 1,
      "label": "Maximum products to show",
      "default": 4
    }
  ],
  "presets": [
    {
      "name": "collection",
      "settings": {}
    }
  ]
}
{% endschema %}
